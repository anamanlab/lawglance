ENVIRONMENT=development
API_BEARER_TOKEN=your-api-bearer-token
ENABLE_SCAFFOLD_PROVIDER=true
ALLOW_SCAFFOLD_SYNTHETIC_CITATIONS=false
EXPORT_POLICY_GATE_ENABLED=false
ENABLE_OPENAI_PROVIDER=false
PRIMARY_PROVIDER=scaffold
# Required in production/prod/ci: explicit grounding citation domain allowlist.
CITATION_TRUSTED_DOMAINS=laws-lois.justice.gc.ca,justice.gc.ca,canada.ca,ircc.canada.ca,canlii.org
# Required when ENABLE_OPENAI_PROVIDER=true (recommended to set even when scaffold is primary).
# OPENAI_API_KEY=your-openai-api-key
# Required when GEMINI_MODEL or GEMINI_MODEL_FALLBACKS are configured.
# GEMINI_API_KEY=your-gemini-api-key
# Optional but recommended for shared caching/rate-limit state.
# REDIS_URL=redis://localhost:6379/0
# Stable model defaults for production-oriented Gemini runtime.
GEMINI_MODEL=gemini-2.5-flash-lite
GEMINI_MODEL_FALLBACKS=gemini-2.5-flash
CORS_ALLOWED_ORIGINS=https://your-frontend.example.com
ENABLE_CASE_SEARCH=true

# Production/prod/ci baseline overrides (required for hardened mode):
# ENVIRONMENT=production
# ENABLE_SCAFFOLD_PROVIDER=false
# ALLOW_SCAFFOLD_SYNTHETIC_CITATIONS=false
# EXPORT_POLICY_GATE_ENABLED=true
# PRIMARY_PROVIDER=gemini
# ENABLE_CASE_SEARCH=false
