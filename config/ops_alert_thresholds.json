{
  "version": "2026-02-25",
  "rules": [
    {
      "name": "error_rate",
      "metric_path": "request_metrics.errors.rate",
      "comparison": "gt",
      "threshold": 0.05,
      "duration_minutes": 10,
      "min_request_count": 20
    },
    {
      "name": "fallback_rate",
      "metric_path": "request_metrics.fallback.rate",
      "comparison": "gt",
      "threshold": 0.2,
      "duration_minutes": 10,
      "min_request_count": 20
    },
    {
      "name": "refusal_rate",
      "metric_path": "request_metrics.refusal.rate",
      "comparison": "gt",
      "threshold": 0.35,
      "duration_minutes": 15,
      "min_request_count": 20
    },
    {
      "name": "latency_p95_ms",
      "metric_path": "request_metrics.latency_ms.p95",
      "comparison": "gt",
      "threshold": 8000,
      "duration_minutes": 10,
      "min_request_count": 20
    },
    {
      "name": "cloudflare_free_api_projected_daily_request_utilization_warn",
      "metric_path": "derived.cloudflare_free_plan.api_projected_requests_per_day_utilization",
      "comparison": "gt",
      "threshold": 0.7,
      "duration_minutes": 15,
      "min_request_count": 20,
      "breach_status": "warn"
    },
    {
      "name": "cloudflare_free_api_projected_daily_request_utilization_fail",
      "metric_path": "derived.cloudflare_free_plan.api_projected_requests_per_day_utilization",
      "comparison": "gt",
      "threshold": 0.9,
      "duration_minutes": 15,
      "min_request_count": 20,
      "breach_status": "fail"
    }
  ]
}
